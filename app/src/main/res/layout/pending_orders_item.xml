<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_pending"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/name_customer"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="32dp"
                android:text="Spacy fresh crab"
                app:layout_constraintBottom_toBottomOf="@+id/image_pending"
                app:layout_constraintStart_toEndOf="@+id/image_pending"
                app:layout_constraintTop_toTopOf="@+id/image_pending" />

            <TextView
                android:id="@+id/Food_quantity"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="Quantity"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/image_pending"
                app:layout_constraintStart_toEndOf="@+id/image_pending"
                app:layout_constraintTop_toTopOf="@+id/image_pending"
                app:layout_constraintVertical_bias="0.9" />

            <TextView
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginStart="16dp"
                android:text="1"
                android:textSize="15sp"
                android:textColor="@color/text_color"
                app:layout_constraintBottom_toBottomOf="@+id/Food_quantity"
                app:layout_constraintStart_toEndOf="@+id/Food_quantity"
                app:layout_constraintTop_toTopOf="@+id/Food_quantity" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/accept_btn"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/green_btn"
                android:text="Accept"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>